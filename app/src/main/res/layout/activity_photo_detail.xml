<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPolaroidBackground">

    <!-- Toolbar com ícone de voltar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkBrown"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:contentDescription="@string/back_icon_description"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="start"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/photo_details"
            android:textSize="27sp"
            android:layout_marginEnd="15dp"
            android:textColor="@android:color/white"/>

    </androidx.appcompat.widget.Toolbar>


    <!-- Layout da "polaroid" -->

    <!-- ScrollView para os dados abaixo da imagem -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-4dp"
        android:background="@color/colorBackground"
        android:elevation="4dp"
        android:padding="16dp"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/descPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="DESCRIÇÃO"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/photoCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CATEGORIA"
                    android:textStyle="bold"
                    android:background="@color/colorBackground"
                    android:textColor="@color/colorTextPrimary"

                    android:padding="12dp"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorBackground"
                    android:padding="12dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/photoLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="LOCALIZAÇÃO"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorBackground"
                android:padding="12dp"
                android:text="Latitude, Longitude"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/photoHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="DATA E HORA"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:padding="12dp"
                android:text="Data e Hora"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
